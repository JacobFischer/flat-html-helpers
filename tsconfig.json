{
    "compilerOptions": {
        "target": "es3",
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": true,

        "strict": true,
        "strictNullChecks": true,
        "removeComments": false,

        "noImplicitAny": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,

        "inlineSourceMap": true,
        "inlineSources": true,
        "outDir": "dist",
        "baseUrl": "./",
    },
}
